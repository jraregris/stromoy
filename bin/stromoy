#!/usr/bin/env ruby

require 'slop'

opts = Slop.parse do
  banner "stromoy [options]\n"
  on :f, :file=, "File"
  on :s, :string=, "Search string"
end

b = open(opts[:f]).bytes.to_a
s = opts[:s].chars.to_a

8.times do
  print "#{b.shift|| '..'} "
end

print " "

8.times do
  print "#{s.shift|| '.'} "
end

exit 0
